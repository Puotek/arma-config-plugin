<templateSet group="Arma Config">
<!--
- `&#10;` = newline
- `&#9;` = tab
- `&quot;` = `"`
-->
    <!-- Basic class -->
    <template
            name="class"
            value="class $NAME$ {&#10;&#9;$END$&#10;};"
            description="Arma 3 config class"
            toReformat="true"
            toShortenFQNames="false">
        <variable name="NAME" expression="" defaultValue="MyClass" alwaysStopAt="true"/>
        <context>
            <option name="ARMA_CONFIG" value="true"/>
        </context>
    </template>

    <!-- CfgPatches skeleton -->
    <template
            name="cfgpatches"
            value="class CfgPatches {&#10;&#9;class $TAG$_$NAME$ {&#10;&#9;&#9;name = &quot;$DISPLAY_NAME$&quot;;&#10;&#9;&#9;units[] = {${END$}};&#10;&#9;&#9;weapons[] = {};&#10;&#9;&#9;requiredVersion = 1.0;&#10;&#9;&#9;requiredAddons[] = {};&#10;&#9;};&#10;};"
            description="CfgPatches entry"
            toReformat="true"
            toShortenFQNames="false">
        <variable name="TAG" expression="" defaultValue="TAG" alwaysStopAt="true"/>
        <variable name="NAME" expression="" defaultValue="Main" alwaysStopAt="true"/>
        <variable name="DISPLAY_NAME" expression="" defaultValue="My Mod" alwaysStopAt="true"/>
        <context>
            <option name="ARMA_CONFIG" value="true"/>
        </context>
    </template>

    <!-- Property assignment -->
    <template
            name="prop"
            value="$NAME$ = $VALUE$;"
            description="Property assignment"
            toReformat="false"
            toShortenFQNames="false">
        <variable name="NAME" expression="" defaultValue="myProperty" alwaysStopAt="true"/>
        <variable name="VALUE" expression="" defaultValue="1" alwaysStopAt="true"/>
        <context>
            <option name="ARMA_CONFIG" value="true"/>
        </context>
    </template>

    <!-- Array property -->
    <template
            name="array"
            value="$NAME$[] = {&#10;&#9;$END$&#10;};"
            description="Array property"
            toReformat="true"
            toShortenFQNames="false">
        <variable name="NAME" expression="" defaultValue="myArray" alwaysStopAt="true"/>
        <context>
            <option name="ARMA_CONFIG" value="true"/>
        </context>
    </template>

</templateSet>
