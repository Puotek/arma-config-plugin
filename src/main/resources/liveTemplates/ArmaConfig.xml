<!--suppress LiveTemplateI18n -->
<templateSet group="Arma Config">
<!--
&#10;
&#9;
&quot;
-->
    <template
            name="class"
            value="class $NAME$ {&#10;&#9;$END$&#10;};"
            description="Class declaration"
            toReformat="true"
            toShortenFQNames="false">
        <variable name="NAME" expression="" defaultValue="CfgMyClass" alwaysStopAt="true"/>
        <context>
            <option name="ARMA_CONFIG" value="true"/>
        </context>
    </template>

    <template
            name="CfgPatches"
            value="class CfgPatches {&#10;&#9;class $PBO_NAME$ {&#10;&#9;&#9;name = &quot;$DISPLAY_NAME$&quot;;&#10;&#9;&#9;author = &quot;$AUTHOR$&quot;;&#10;&#9;&#9;skipWhenMissingDependencies = 1;&#10;&#9;&#9;requiredAddons[] = {$REQUIRED$};&#10;&#9;&#9;requiredVersion = 2.20;&#10;&#9;&#9;units[] = {};&#10;&#9;&#9;weapons[] = {};&#10;&#9;};&#10;};"
            description="Example of CfgPatches"
            toReformat="true"
            toShortenFQNames="false">
        <variable name="PBO_NAME" expression="" defaultValue="tag_pbo_folderName" alwaysStopAt="true"/>
        <variable name="DISPLAY_NAME" expression="" defaultValue="My Mod Name" alwaysStopAt="true"/>
        <variable name="AUTHOR" expression="" defaultValue="My Nickname" alwaysStopAt="true"/>
        <variable name="REQUIRED" expression="" defaultValue="&quot;cba_main&quot;" alwaysStopAt="true"/>
        <variable name="SKIP" expression="" defaultValue="skipWhenMissingDependencies = 1;" alwaysStopAt="true"/>
        <context>
            <option name="ARMA_CONFIG" value="true"/>
        </context>
    </template>

    <!-- Property assignment -->
    <template
            name="prop"
            value="$NAME$ = $VALUE$;"
            description="Property assignment"
            toReformat="false"
            toShortenFQNames="false">
        <variable name="NAME" expression="" defaultValue="myProperty" alwaysStopAt="true"/>
        <variable name="VALUE" expression="" defaultValue="1" alwaysStopAt="true"/>
        <context>
            <option name="ARMA_CONFIG" value="true"/>
        </context>
    </template>

    <!-- Array property -->
    <template
            name="array"
            value="$NAME$[] = {&#10;&#9;$END$&#10;};"
            description="Array property"
            toReformat="true"
            toShortenFQNames="false">
        <variable name="NAME" expression="" defaultValue="myArray" alwaysStopAt="true"/>
        <context>
            <option name="ARMA_CONFIG" value="true"/>
        </context>
    </template>

</templateSet>
