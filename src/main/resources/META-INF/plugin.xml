<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<!--suppress PluginXmlI18n, PluginXmlCapitalization, PluginXmlPluginLogo -->
<idea-plugin>
    <id>com.github.puotek.armaconfigplugin</id>
    <vendor>Puotek</vendor>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!--suppress KotlinObjectExtensionRegistration -->
        <fileType
                language="ArmaConfig"
                name="Arma Config"
                implementationClass="arma.config.CfgFileType"
                fileNames="config.cpp"
                extensions="hpp;ext;h;hh"/>

        <lang.parserDefinition
                language="ArmaConfig"
                implementationClass="arma.config.CfgParserDefinition"/>
        <lang.syntaxHighlighterFactory
                language="ArmaConfig"
                implementationClass="arma.config.highlighting.CfgSyntaxHighlighterFactory"/>
        <lang.foldingBuilder
                language="ArmaConfig"
                implementationClass="arma.config.folding.CfgFoldingBuilder"/>
        <lang.commenter
                language="ArmaConfig"
                implementationClass="arma.config.CfgCommenter"/>
        <lang.psiStructureViewFactory
                language="ArmaConfig"
                implementationClass="arma.config.structure.CfgStructureViewFactory"/>
        <lang.formatter
                language="ArmaConfig"
                implementationClass="arma.config.formatting.CfgFormattingModelBuilder"/>
        <lang.braceMatcher
                language="ArmaConfig"
                implementationClass="arma.config.editor.CfgBraceMatcher"/>
        <lang.quoteHandler
                language="ArmaConfig"
                implementationClass="arma.config.editor.CfgQuoteHandler"/>
        <lang.smartEnterProcessor
                language="ArmaConfig"
                implementationClass="arma.config.editor.CfgSmartEnterProcessor"/>

        <langCodeStyleSettingsProvider
                implementation="arma.config.formatting.CfgLanguageCodeStyleSettingsProvider"/>
        <codeStyleSettingsProvider
                implementation="arma.config.formatting.ui.CfgCodeStyleSettingsProvider"/>

        <typedHandler
                implementation="arma.config.editor.CfgTypedHandler"/>


        <breadcrumbsInfoProvider
                implementation="arma.config.breadcrumbs.CfgBreadcrumbsProvider"/>

        <colorSettingsPage
                implementation="arma.config.highlighting.CfgColorSettingsPage"/>

        <liveTemplateContext
                contextId="ARMA_CONFIG"
                implementation="arma.config.liveTemplates.CfgTemplateContextType"/>
        <defaultLiveTemplates
                file="/Templates.xml"/>

        <psi.referenceContributor
                language="ArmaConfig"
                implementation="arma.config.reference.CfgReferenceContributor"/>


        <!-- ANNOTATORS-->
        <annotator
                language="ArmaConfig"
                implementationClass="arma.config.highlighting.SingleQuoteInnerStringAnnotator"/>
        <annotator
                language="ArmaConfig"
                implementationClass="arma.config.highlighting.PreprocessorIncludeAnnotator"/>

        <!-- INSPECTIONS -->
        <localInspection
                language="ArmaConfig"
                shortName="ArmaCommaInParentheses"
                displayName="Comma inside parentheses"
                groupName="Arma Config"
                enabledByDefault="true"
                level="WEAK WARNING"
                implementationClass="arma.config.inspections.CommaInMacroInspection"/>
        <localInspection
                language="ArmaConfig"
                shortName="TrailingCommaInspection"
                displayName="Trailing comma in array"
                groupName="Arma Config"
                enabledByDefault="true"
                level="ERROR"
                implementationClass="arma.config.inspections.TrailingCommaInspection"/>
        <localInspection
                language="ArmaConfig"
                shortName="ArmaDuplicateAssignment"
                displayName="Duplicate parameter assignment in class"
                groupName="Arma Config"
                enabledByDefault="true"
                level="ERROR"
                implementationClass="arma.config.inspections.DuplicateAssignmentInspection"/>

    </extensions>
</idea-plugin>
