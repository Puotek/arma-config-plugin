<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<!--suppress PluginXmlI18n, PluginXmlCapitalization, PluginXmlPluginLogo -->
<idea-plugin>
    <id>com.github.puotek.armaconfigplugin</id>
    <name>Arma Config Support</name>
    <vendor>Puotek</vendor>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!--suppress KotlinObjectExtensionRegistration -->
        <fileType
                name="Arma Config"
                implementationClass="arma.config.ArmaConfigFileType"
                language="ArmaConfig"
                fileNames="config.cpp"
                extensions="hpp;ext;h;hh"/>

        <lang.parserDefinition
                language="ArmaConfig"
                implementationClass="arma.config.ArmaConfigParserDefinition"/>
        <lang.syntaxHighlighterFactory
                language="ArmaConfig"
                implementationClass="arma.config.highlighting.ArmaConfigSyntaxHighlighterFactory"/>
        <lang.foldingBuilder
                language="ArmaConfig"
                implementationClass="arma.config.folding.ArmaConfigFoldingBuilder"/>
        <lang.commenter
                language="ArmaConfig"
                implementationClass="arma.config.ArmaConfigCommenter"/>
        <lang.psiStructureViewFactory
                language="ArmaConfig"
                implementationClass="arma.config.structure.ArmaConfigStructureViewFactory"/>
        <lang.formatter
                language="ArmaConfig"
                implementationClass="arma.config.formatting.ArmaConfigFormattingModelBuilder"/>
        <lang.braceMatcher
                language="ArmaConfig"
                implementationClass="arma.config.editor.ArmaConfigBraceMatcher"/>
        <lang.quoteHandler
                language="ArmaConfig"
                implementationClass="arma.config.editor.ArmaConfigQuoteHandler"/>
        <lang.smartEnterProcessor
                language="ArmaConfig"
                implementationClass="arma.config.editor.ArmaConfigSmartEnterProcessor"/>

        <langCodeStyleSettingsProvider
                implementation="arma.config.formatting.ArmaConfigLanguageCodeStyleSettingsProvider"/>
        <codeStyleSettingsProvider
                implementation="arma.config.formatting.ui.ArmaConfigCodeStyleSettingsProvider"/>

        <typedHandler
                implementation="arma.config.editor.ArmaConfigTypedHandler"/>


        <breadcrumbsInfoProvider
                implementation="arma.config.breadcrumbs.ArmaBreadcrumbsProvider"/>

        <colorSettingsPage implementation="arma.config.highlighting.ArmaConfigColorSettingsPage"/>

        <liveTemplateContext
                contextId="ARMA_CONFIG"
                implementation="arma.config.liveTemplates.ArmaConfigTemplateContextType"/>
        <defaultLiveTemplates file="/Templates.xml"/>

        <psi.referenceContributor
                implementation="arma.config.reference.ArmaConfigReferenceContributor" language="ArmaConfig"/>


        <!-- ANNOTATORS-->
        <annotator
                language="ArmaConfig"
                implementationClass="arma.config.highlighting.SingleQuoteInnerStringAnnotator"/>
        <annotator
                language="ArmaConfig"
                implementationClass="arma.config.highlighting.PreprocessorIncludeAnnotator"/>

        <!-- INSPECTIONS -->
        <localInspection
                language="ArmaConfig"
                shortName="ArmaCommaInParentheses"
                displayName="Comma inside parentheses"
                groupName="Arma Config"
                enabledByDefault="true"
                level="WEAK WARNING"
                implementationClass="arma.config.inspections.CommaInMacroInspection"/>
        <localInspection
                language="ArmaConfig"
                shortName="ArmaDuplicateAssignment"
                displayName="Duplicate parameter assignment in class"
                groupName="Arma Config"
                enabledByDefault="true"
                level="ERROR"
                implementationClass="arma.config.inspections.DuplicateAssignmentInspection"/>

    </extensions>
</idea-plugin>
