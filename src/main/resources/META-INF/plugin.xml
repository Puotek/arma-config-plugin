<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.puotek.armaconfigplugin</id>
    <name>Arma Config Support</name>
    <vendor>Puotek</vendor>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!--suppress KotlinObjectExtensionRegistration -->
        <fileType
                name="Arma Config"
                implementationClass="arma.config.ArmaConfigFileType"
                language="ArmaConfig"
                fileNames="config.cpp"
                extensions="hpp;ext;h;hh"/>

        <lang.parserDefinition
                language="ArmaConfig"
                implementationClass="arma.config.ArmaConfigParserDefinition"/>
        <lang.syntaxHighlighterFactory
                language="ArmaConfig"
                implementationClass="arma.config.highlighting.ArmaConfigSyntaxHighlighterFactory"/>
        <lang.foldingBuilder
                language="ArmaConfig"
                implementationClass="arma.config.folding.ArmaConfigFoldingBuilder"/>
        <lang.commenter
                language="ArmaConfig"
                implementationClass="arma.config.ArmaConfigCommenter"/>
        <lang.psiStructureViewFactory
                language="ArmaConfig"
                implementationClass="arma.config.structure.ArmaConfigStructureViewFactory"/>

        <breadcrumbsInfoProvider
                implementation="arma.config.breadcrumbs.ArmaBreadcrumbsProvider"/>

        <colorSettingsPage implementation="arma.config.highlighting.ArmaConfigColorSettingsPage"/>

<!-- INSPECTIONS -->
        <localInspection
                language="ArmaConfig"
                shortName="ArmaCommaInParentheses"
                displayName="Comma inside parentheses"
                groupName="Arma Config"
                enabledByDefault="true"
                level="WEAK WARNING"
                implementationClass="arma.config.inspections.CommaInParenthesesInspection"/>
        <localInspection
                language="ArmaConfig"
                shortName="ArmaArrayBraceMismatch"
                displayName="Array brackets and braces must match"
                groupName="Arma Config"
                enabledByDefault="true"
                level="WARNING"
                implementationClass="arma.config.inspections.ArrayBraceMismatchInspection"/>
        <localInspection
                language="ArmaConfig"
                shortName="ArmaDuplicateAssignment"
                displayName="Duplicate parameter assignment in class"
                groupName="Arma Config"
                enabledByDefault="true"
                level="WARNING"
                implementationClass="arma.config.inspections.DuplicateAssignmentInspection"/>

    </extensions>
</idea-plugin>
